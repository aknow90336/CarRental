@{
    Layout = "_Layout2";
}

<section style="border-bottom:none">
    <div class="container" style="margin-top: 3%;">
        <div id="login">
            <div class="row">
                <div class="col-md-6 col-sm-6 offset-md-3 offset-sm-3">
                    @* <div class="alert alert-mini alert-danger mb-30">
                        <strong>登錄失敗</strong> 密碼錯誤
                    </div> *@
                    <div class="box-static box-transparent box-bordered p-30">
                        <div class="box-title mb-30">
                            <h2 class="fs-20">您的手機號碼就是登入帳號</h2>
                        </div>
                        <div id="test">
                            123124
                        </div>
                        <form id="postForm" class="sky-form" method="post" action="/Home/Login" autocomplete="off">
                            <div class="clearfix">
                                <label>帳號</label>
                                <label class="input mb-10">
                                    <i class="ico-append fa fa-mobile"></i>
                                    <input id="Phone" name="Phone" required="true" type="phone">
                                    <b class="tooltip tooltip-bottom-right">請輸入您的登入帳號</b>
                                </label>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-6">
                                    <div class="form-tip pt-20">
                                        <a class="no-text-decoration fs-13 mt-10 block"><strong>忘記密碼</strong></a>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-6 text-right">
                                    <button class="btn btn-primary" type="button" onclick="isUser()"> 登入/註冊 </button>
                                </div>
                            </div>
                        </form>
                        <div class="text-center">
                            <div class="mb-20">&ndash;&ndash;&ndash;&ndash; 或 &ndash;&ndash;&ndash;&ndash;</div>
                            <a class="btn btn-block btn-social btn-facebook mt-10">
                                <i class="fa fa-facebook"></i> 透過 Facebook 登入
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script type="text/javascript" charset="utf-8">
        function isUser() {
            var formData = new FormData($("#postForm")[0]);
            $.ajax({
                type: "POST",
                url: "@Url.Action("IsUser","User")",
                data: formData,
                processData: false,
                contentType: false,
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    if(JSON.parse(data.result))
                    {
                        alert('666');
                    }
                },
                error: function (data, textStatus) {
                    alert('fuck');
                },
            })
        }

        function isUser() {
            var formData = new FormData($("#postForm")[0]);
            $.ajax({
                type: "POST",
                url: "@Url.Action("IsUser","User")",
                data: formData,
                processData: false,
                contentType: false,
                dataType: "json",
                success: function (data, textStatus, jqXHR) {
                    if(JSON.parse(data.result))
                    {
                        $("#test").html(data.result);
                    }
                },
                error: function (data, textStatus) {
                    alert('fuck');
                },
            })
        }
    </script>
}